@article{GalveZuecoKohlerLutzHanggi09,
   author    = {Fernando Galve and David Zueco and Sigmund Kohler and Eric Lutz and Peter H\"anggi},
   title     = {Entanglement Resonance in Driven Spin Chains},
   abstract  = {We consider a spin-1/2 anisotropic XY model with time-dependent
spin-spin coupling as means of creating long-distance entanglement. We predict
the emergence of significant entanglement between the first and the last spin
whenever the ac part of the coupling has a frequency matching the Zeeman
splitting. In particular, we find that the concurrence assumes its maximum with
a vanishing dc part. Mapping the time-dependent Hamiltonian within a
rotating-wave approximation to an effective static model provides qualitative
and quantitative understanding of this entanglement resonance. Numerical
results for the duration of the entanglement creation and its length dependence
substantiate the effective static picture.},
   journal   = {Phys. Rev. A},
   volume    = {79},
   pages     = {032332},
   year      = {2009},
   doi       = {10.1103/PhysRevA.79.032332},
   arxiv     = {0809.3712 [quant-ph]}
}

@article{FainbergHanggiKohlerNitzan09,
   status    = {nonreviewed},
   author    = {Boris D. Fainberg and Peter H\"anggi and Sigmund Kohler and Abraham Nitzan},
   title     = {Exciton- and Light-induced Current in Molecular Nanojunctions},
   journal   = {AIP Conf. Proc.},
   address   = {New York},
   abstract  = {We consider exciton- and light-induced current in molecular
nanojunctions. Using a model comprising a two two-level sites bridge connecting
free electron reservoirs we show that the exciton coupling between the sites of
the molecular bridge can markedly effect the source-drain current through a
molecular junction. In some cases when excited and unexcited states of the
sites are coupled differently to the leads, the contribution from electron-hole
excitations can exceed the Landauer elastic current and dominate the observed
conduction. We have proposed an optical control method using chirped pulses for
enhancing charge transfer in unbiased junctions where the bridging molecule is
characterized by a strong charge-transfer transition.},
   note      = {International Conference on Transport and Optical Properties of Nanomaterials},
   volume    = {1147},
   pages     = {78-86},
   year      = {2009},
   doi       = {10.1063/1.3183490},
